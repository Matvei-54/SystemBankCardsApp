<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-latest.xsd">

    <changeSet id="CARD_ENTITY_INIT_TABLE_AND_SEQUENCE" author="Matvei">

        <createSequence cycle="false" dataType="bigint" incrementBy="1" maxValue="9223372036854775807" minValue="1" sequenceName="card_main_sequence" startValue="1"/>

        <createTable tableName="cardEntity">
            <column name="id" type="BIGINT">
                <constraints primaryKey="true"/>
            </column>
            <column name="card_number" type="VARCHAR(150)">
                <constraints nullable="false"/>
            </column>

            <column name="owner_id" type="BIGINT">
                <constraints nullable="false"/>
            </column>

            <column name="expiry_date" type="DATE">
                <constraints nullable="false"/>
            </column>

            <column name="card_status" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>

            <column name="card_balance" type="DECIMAL(19,4)">
                <constraints nullable="false"/>
            </column>

            <column name="currency" type="VARCHAR(10)">
                <constraints nullable="false"/>
            </column>

            <column name="transaction_id" type="BIGINT">
            </column>

            <column name="created_at" type="DATETIME" defaultValueComputed="CURRENT_TIMESTAMP">
                <constraints nullable="false"/>
            </column>

            <column name="updated_at" type="DATETIME"/>

            <column name="version" type="INT" defaultValue="0"/>
        </createTable>

        <addForeignKeyConstraint baseTableName="cardEntity" baseColumnNames="owner_id" constraintName="fk_owner_id" referencedTableName="customerEntity"
                                 referencedColumnNames="id"/>

        <addForeignKeyConstraint baseTableName="cardEntity" baseColumnNames="transaction_id" constraintName="fk_transaction_id" referencedTableName="transactionEntity"
                                 referencedColumnNames="id"/>

    </changeSet>
</databaseChangeLog>